{
  "version": 2,
  "buildCommand": "cd backend && npm install && cd ../frontend && npm install && npm run build",
  "outputDirectory": "frontend/public",
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    { 
      "src": "/(.*)", 
      "dest": "/frontend/public/index.html" 
    }
  ],
  "functions": {
    "backend/vercel.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
} 